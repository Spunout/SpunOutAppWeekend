<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundBlue">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/meterbackground"
            android:layout_centerInParent="true"
            android:layout_width="250px"
            android:layout_height="250px"
            android:src="@drawable/pointmeterbackground"/>

        <ImageView
            android:id="@+id/meterforeground"
            android:layout_centerInParent="true"
            android:layout_width="250px"
            android:layout_height="250px"/>

        <TextView
            android:id="@+id/score_number"
            android:layout_centerInParent="true"
            android:layout_width="250px"
            android:layout_height="250px"
            android:text="150"
            android:textSize="70sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/times_logged"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="30sp"
            android:text="0"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <SeekBar
            android:id="@+id/slider"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/prompt"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:text="@string/icons_title"
        android:textSize="@dimen/menu_ts"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/eat_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/menu_item">

            <ImageView
                android:id="@+id/eat_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/eat"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="9dp"
                android:text="EAT WELL"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sleep_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/menu_item">

            <ImageView
                android:id="@+id/sleep_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/sleep"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="9dp"
                android:text="SLEEP WELL"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/exercise_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/menu_item">

            <ImageView
                android:id="@+id/exercise_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/exercise"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="9sp"
                android:text="MOVE"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/learn_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/menu_item">

            <ImageView
                android:id="@+id/learn_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/learn"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="9dp"
                android:text="LEARN"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/talk_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/menu_item">

            <ImageView
                android:id="@+id/talk_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/talk"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="9dp"
                android:text="TALK"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/make_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/menu_item">

            <ImageView
                android:id="@+id/make_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/creative"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="9dp"
                android:text="MAKE"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/play_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/menu_item">

            <ImageView
                android:id="@+id/play_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/play"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="9dp"
                android:text="PLAY"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/connect_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/menu_item">

            <ImageView
                android:id="@+id/connect_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/relationship"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="9dp"
                android:text="CONNECT"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
