<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:background="#0094CA">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/meterbackground"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/points_size"
                android:layout_height="@dimen/points_size"
                android:src="@drawable/pointmeterbackground"/>

            <ImageView
                android:id="@+id/meterforeground"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/points_inner"
                android:layout_height="@dimen/points_inner"
                android:layout_marginTop="10px"
                android:layout_marginLeft="10px"/>

            <TextView
                android:id="@+id/score_number"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/points_size"
                android:layout_height="@dimen/points_size"
                android:text="150"
                android:textSize="70sp"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="20dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="top">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/sad_face"
                    android:layout_weight="3"/>

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/drag"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/happy_face"
                    android:layout_weight="3"/>

                </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hideable"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/opaque">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menuBackground"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/icons_title"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/menu_ts"
                android:gravity="center"/>

            <GridView
                android:id="@+id/moodpage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:verticalSpacing="10dp"
                android:columnWidth="100dp"
                android:numColumns="4"
                android:layout_margin="10dp"
                android:choiceMode="multipleChoice"/>

            <Button
                android:onClick="recordChoices"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/spunout_button"
                android:text="Record"
                android:textSize="25dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>